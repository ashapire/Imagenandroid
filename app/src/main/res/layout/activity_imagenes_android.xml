<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ImagenesAndroid">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="446dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:text="Libreria de imagenes"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="168dp"
                android:layout_height="151dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/vimagen"
                app:srcCompat="@mipmap/android"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="73dp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="170dp"
                android:layout_height="158dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/vimagen"
                app:srcCompat="@mipmap/clasico"
                tools:layout_editor_absoluteX="195dp"
                tools:layout_editor_absoluteY="72dp" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="157dp"
                android:layout_height="170dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/vimagen"
                app:srcCompat="@mipmap/meme"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="244dp" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="174dp"
                android:layout_height="170dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/vimagen"
                app:srcCompat="@mipmap/meme2"
                tools:layout_editor_absoluteX="194dp"
                tools:layout_editor_absoluteY="242dp" />


        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginTop="12dp"
        android:text="@string/mensaje_boton"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2"
        tools:layout_editor_absoluteX="0dp" />


</android.support.constraint.ConstraintLayout>